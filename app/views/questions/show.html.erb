<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h2 class="card-title">Questions#show</h2>
        </div>
        <div class="card-body">
          <h3 class="card-title"><%= @question.title %></h3>
          <p class="card-text"><%= @question.body.present? ? @question.body : "No body" %></p>
          <hr>
          <%= link_to 'Back', questions_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  </div>
</div>