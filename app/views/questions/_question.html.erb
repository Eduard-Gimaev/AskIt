<div class="container mt-4">
  <!-- <h1 class="text-center bg-primary text-white py-3 mb-4 shadow-sm rounded">Question Details</h1> -->
  <article class="card mt-3">
    <div class="card-header">
      <h5><%= @question.user.decorate.name_or_email %></h5>
    </div>
    <div class="card-body">
      <h4><%= @question.title %></h4>
      <section class="card-text">
        <time class="text-muted" datetime="<%= @question.created_at.iso8601 %>">
          <small><%= @question.created_at.strftime('%Y-%m-%d %H:%M:%S') %></small>
        </time>
        <div class="my-2">
          <%= sanitize @question.body %>
        </div>
      </section>
      <div class="d-flex justify-content-left">
        <%= link_to t('actions.show'), questions_path, class: "btn btn-secondary btn-sm mx-1" %>
        <%= link_to t('actions.edit'), edit_question_path(@question), class: "btn btn-warning btn-sm mx-1" %>
        <%= button_to t('actions.delete'), question_path(@question), method: :delete, data: { turbo_method: :delete, turbo_confirm: t('actions.are_you_sure?') }, class: "btn btn-danger btn-sm mx-1" %>
      </div>
    </div>
  </article>

  <div class="mt-4">
    <%= link_to t('actions.add_resource', resource: t('resources.answer')), new_question_answer_path(@question), class: 'btn btn-primary' %>
    <%= link_to t('actions.back_to', resource: t('resources.questions')), questions_path, class: 'btn btn-secondary' %>
  </div>

  <%= paginate @answers if @answers.any? %> 
  <div class="mt-3">
    <%= render @answers if @answers.any? %> 
  </div>
  
</div>  
