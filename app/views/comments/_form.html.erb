<div class="comments mt-1">
  <div class="mt-1">
    <!-- Кнопка для отображения формы -->
   <button class="btn btn-primary btn-sm mx-1" type="button" data-bs-toggle="collapse" data-bs-target="#commentForm-<%= commentable.id %>" aria-expanded="false" aria-controls="commentForm-<%= commentable.id %>">
      <%= t('actions.add_resource', resource: t('resources.comment')) %>
    </button>
    <!-- Форма для добавления комментария -->
    <div class="collapse mt-3" id="commentForm-<%= commentable.id %>">
      <%= render 'shared/errors', resource: @comment %>
      <%= form_with(model: [commentable, (@comment || commentable.comments.build)], local: true) do |form| %>
        <div class="form-group">
          <%= form.text_area :body, class: 'form-control', rows: 1 %>
        </div>
        <div class="form-group mt-2">
          <%= form.submit t('actions.submit'), class: 'btn btn-primary btn-sm mx-1' %>
        </div>
      <% end %>
    </div>
  </div>
</div>