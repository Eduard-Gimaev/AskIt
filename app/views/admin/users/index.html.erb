<%= provide :page_title, 'Users' %>

<%= currently_at 'Users' %>
<%= paginate(@users) if @users.total_pages > 1 %>

<div class="btn-group mb-3"> 
  <%= link_to 'New user', new_admin_user_path, class: 'btn btn-primary' %>
</div>
  

<div class="btn-group mb-3"> 
  <%= link_to 'Download Zip XLSX', admin_users_path(format: :zip), class: 'btn btn-primary' %>
  <%= link_to 'Download XLSX', admin_users_path(format: :xlsx), class: 'btn btn-secondary' %>
</div>

<h2>Upload XLSX or ZIP file</h2>
<%= form_with url: admin_users_path, method: :post, local: true, multipart: true do |form| %>
  <div class="form-group">
    <%= form.label :file, "Choose XLSX or ZIP file" %>
    <%= form.file_field :file, class: 'form-control' %>
  </div>
  <%= form.submit 'Upload', class: 'btn btn-success' %>
<% end %>

<%= render @users %>