<%= provide :page_title, @user.email.split("@").first %>

<%= currently_at 'User Details' %>

<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h2>User Details</h2>
    </div>
    <div class="card-body">
      <h4 class="card-title"><%= @user.email %></h4>
      <p class="card-text">
        <strong>Joined:</strong> <%= @user.created_at.strftime('%Y-%m-%d %H:%M:%S') %><br>
      </p>
      <div class="d-flex justify-content-left">
        <%= link_to 'Edit', edit_admin_user_path(@user), class: "btn btn-warning btn-sm mx-1" %>
        <%= button_to 'Delete', admin_user_path(@user), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm mx-1" %>
      </div>
    </div>
  </div>
  <div class="mt-3">
    <%= link_to 'Back to Users', admin_users_path, class: "btn btn-secondary" %>
  </div>
</div>