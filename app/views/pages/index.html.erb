<%= currently_at t('actions.home') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 text-center">
      <div class="jumbotron bg-light p-5 rounded shadow-sm">
        <h1 class="display-4">Welcome to AskIt</h1>
        <p class="lead">Your go-to platform for asking and answering questions. Join our community and share your knowledge!</p>
        <hr class="my-4">
        <p>Get started by exploring questions or asking your own.</p>
        <div class="d-flex justify-content-center">
          <%= link_to t('actions.explore_questions'), questions_path, class: 'btn btn-primary btn-lg mx-2' %>
          <%= link_to t('actions.ask_question'), new_question_path, class: 'btn btn-success btn-lg mx-2' %>
        </div>
      </div>
    </div>
  </div>
</div>
