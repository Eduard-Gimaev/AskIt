<%= currently_at t('actions.home') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 text-center">
      <div class="jumbotron bg-light p-5 rounded shadow-sm">
        <h1 class="display-4"><%= t('welcome.title') %></h1>
        <p class="lead"><%= t('welcome.lead') %></p>
        <hr class="my-4">
        <p><%= t('welcome.get_started') %></p>
        <div class="d-flex justify-content-center">
          <%= link_to t('actions.explore_questions'), questions_path, class: 'btn btn-primary btn-lg mx-2' %>
          <%= link_to t('actions.ask_question'), new_question_path, class: 'btn btn-success btn-lg mx-2' %>
        </div>
      </div>
    </div>
  </div>
</div>
