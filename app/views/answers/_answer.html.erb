<div class="container mt-4">
  <h1 class="text-center bg-primary text-white py-3 mb-4 shadow-sm rounded">Answer Details</h1>
  <article class="card mt-3">
    <div class="card-body">
      <h4>Answer to: <%= @answer.question.title %></h4>
      <section class="card-text">
        <time class="text-muted" datetime="<%= @answer.created_at.iso8601 %>">
          <small><%= @answer.created_at.strftime('%Y-%m-%d %H:%M:%S') %></small>
        </time>
        <p class="my-2">
          <%= @answer.body %>
        </p>
      </section>
      <div class="d-flex justify-content-left">
        <%= link_to 'Back', question_path(@answer.question), class: "btn btn-secondary btn-sm mx-1" %>
        <%= link_to 'Edit', edit_question_answer_path(@answer.question, @answer), class: "btn btn-warning btn-sm mx-1" %>
        <%= button_to 'Delete', question_answer_path(@answer.question, @answer), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm mx-1" %>
      </div>
    </div>
  </article>
</div>