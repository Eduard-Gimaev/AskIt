 <% if question.answers.any? %>
      <% question.answers.each do |answer| %>
        <article class="card mt-3" id='answer-<%= answer.id %>'>
          <div class="card-body">
            <section class="card-text">
              <time class="text-muted" datetime="<%= answer.created_at.iso8601 %>">
                <small><%= answer.created_at.strftime('%Y-%m-%d %H:%M:%S') %></small>
              </time>
              <div class="my-2">
                <%= sanitize answer.body %>
              </div>
            </section>
            <div class="d-flex justify-content-left">
              <%= link_to 'Edit', edit_question_answer_path(question, answer), class: "btn btn-warning btn-sm mx-1" %>
              <%= button_to 'Delete', question_answer_path(question, answer), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm mx-1" %>
            </div>
          </div>
        </article>
      <% end %>
    <% end %>